dias = ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado', 'Domingo']
comidas = ['Desayuno', 'Media mañana', 'Almuerzo', 'Media tarde', 'Cena']
desayunos = ["1 tostada + 0.5 palta", "1 vaso jugo + 2 tostadas", "2 huevos + 1 tostada", "2 huevos + 0.5 palta", "1 vaso jugo + 1 palta", "1 vaso jugo + 1 tostada + 1 huevo", "1 huevo + 1 vaso jugo + 1 tostada"]
mms = ["1 manzana", "1 mandarina", "1 pera", "1 plátano", "1 taza arándanos", "1 taza fresas", "1 taza aguaymantos"]
almuerzos = ["1 filete pollo + 1 taza arroz + 1 ensalada", "1 filete pescado + 1 papa + 1 ensalada", "1 lata atún + 1 choclo + 1 ensalada", "1 ensalada + 3 huevos", "1 filete carne + 1 palta", "1 filete pollo + 1 camote + 1 ensalada", "1 filete pescado + 1 ensalada"]
mts = ["1 manzana", "3 mandarinas", "1 pera", "1 plátano", "0.25 tazas nueces", "0.25 tazas almendras", "2 tazas sandía"]
cenas = ["1 tostada + 1 palta", "1 ensalada + 1 camote", "1 filete pollo + 2 papas", "1 filete carne + 1 ensalada", "2 choclos + 1 lata atún", "1 ensalada + 3 huevos", "1 tostada + 0.5 palta + 2 huevos"]
dieta = {}
desayunosd = {"Desayuno 1: ":"1 tostada + 0.5 palta", "Desayuno 2: ":"1 vaso jugo + 2 tostadas", "Desayuno 3: ":"2 huevos + 1 tostada", "Desayuno 4: ":"2 huevos + 0.5 palta", "Desayuno 5: ":"1 vaso jugo + 1 palta", "Desayuno 6: ":"1 vaso jugo + 1 tostada + 1 huevo", "Desayuno 7: ":"1 huevo + 1 vaso jugo + 1 tostada"}
mmsd = {"Media mañana 1: ":"1 manzana", "Media mañana 2: ":"1 mandarina", "Media mañana 3: ":"1 pera", "Media mañana 4: ":"1 plátano", "Media mañana 5: ":"1 taza arándanos", "Media mañana 6: ":"1 taza fresas", "Media mañana 7: ":"1 taza aguaymantos"}
almuerzosd = {"Almuerzo 1: ":"1 filete pollo + 1 taza arroz + 1 ensalada", "Almuerzo 2: ":"1 filete pescado + 1 papa + 1 ensalada", "Almuerzo 3: ":"1 lata atún + 1 choclo + 1 ensalada", "Almuerzo 4: ":"1 ensalada + 3 huevos", "Almuerzo 5: ":"1 filete carne + 1 palta", "Almuerzo 6: ":"1 filete pollo + 1 camote + 1 ensalada", "Almuerzo 7: ":"1 filete pescado + 1 ensalada"}
mtsd = {"Media tarde 1: ":"1 manzana", "Media tarde 2: ":"3 mandarinas", "Media tarde 3: ":"1 pera", "Media tarde 4: ":"1 plátano", "Media tarde 5: ":"0.25 tazas nueces", "Media tarde 6: ":"0.25 tazas almendras", "Media tarde 7: ":"2 tazas sandía"}
cenasd = {"Cena 1: ":"1 tostada + 1 palta", "Cena 2: ":"1 ensalada + 1 camote", "Cena 3: ":"1 filete pollo + 2 papas", "Cena 4: ":"1 filete carne + 1 ensalada", "Cena 5: ":"2 choclos + 1 lata atún", "Cena 6: ":"1 ensalada + 3 huevos", "Cena 7: ":"1 tostada + 0.5 palta + 2 huevos"}

def desayunoaleatorio():
    comida = {}
    x = 0
    for a in range(0, len(dias)):
        if x == 0:
            a = random.randrange(0, len(dias))
            x = x + 1
            comida['Desayuno:'] = desayunos[a]
            for x, k in comida.items():
                print("\n", x, k)

def mediamananaaleatoria():
    comida = {}
    x = 0
    for b in range(0, len(dias)):
        if x == 0:
            b = random.randrange(0, len(dias))
            x = x + 1
            comida['Media mañana:'] = mms[b]
            for x, k in comida.items():
                print("\n", x, k)

def almuerzoaleatorio():
    comida = {}
    x = 0
    for c in range(0, len(dias)):
        if x == 0:
            c = random.randrange(0, len(dias))
            x = x + 1
            comida['Almuerzo:'] = almuerzos[c]
            for x, k in comida.items():
                print(x, k)

def mediatardealeatoria():
    comida = {}
    x = 0
    for d in range(0, len(dias)):
        if x == 0:
            d = random.randrange(0, len(dias))
            x = x + 1
            comida['Media tarde:'] = mts[d]
            for x, k in comida.items():
                print(x, k)

def cenaaleatoria():
    comida = {}
    x = 0
    for e in range(0, len(dias)):
        if x == 0:
            e = random.randrange(0, len(dias))
            x = x + 1
            comida['Cena:'] = cenas[e]
            for x, k in comida.items():
                print(x, k)

def diaaleatorio():
    for a in range(0, len(dias)):
        a = random.randrange(0, len(dias))
        dieta['Desayuno:'] = desayunos[a]
    for b in range(0, len(dias)):
        b = random.randrange(0, len(dias))
        dieta['Media mañana:'] = mms[b]
    for c in range(0, len(dias)):
        c = random.randrange(0, len(dias))
        dieta['Almuerzo:'] = almuerzos[c]
    for d in range(0, len(dias)):
        d = random.randrange(0, len(dias))
        dieta['Media tarde:'] = mts[d]
    for e in range(0, len(dias)):
        e = random.randrange(0, len(dias))
        dieta['Cena:'] = cenas[e]
    for x, k in dieta.items():
        print(x, k)

import random
def prevelim():
      print("Elija la opción en la cual desea eliminar una comida")
      print("1. Desayuno ")
      print("2. Media mañana ")
      print("3. Almuerzo ")
      print("4. Media tarde ")
      print("5. Cena ")
      print("6. Terminar programa\n\n")
      opcione = input("Opción: ")
      if opcione == "1":
            for v in desayunosd.values():
                print(v)
            elegida = str(input("\nEscriba la comida a eliminar: "))
            del desayunosd[elegida]
            print("\n¡Tu comida fue eliminada correctamente!\n")
            for k in desayunosd.values():
                print(k)
      elif opcione == "2":
            for k in mmsd.values():
                print(k)
            elegida = str(input("\nEscriba la comida a eliminar: "))
            del mmsd[elegida]
            print("\n¡Tu comida fue eliminada correctamente!\n")
            for k in mmsd.values():
                print(k)
      elif opcione == "3":
            for k in almuerzosd.values():
                print(k)
            elegida = str(input("\nEscriba la comida a eliminar: "))
            del almuerzosd[elegida]
            print("\n¡Tu comida fue eliminada correctamente!\n")
            for k in almuerzosd.values():
                print(k)
      elif opcione == "4":
            for k in mtsd.values():
                print(k)
            elegida = str(input("\nEscriba la comida a eliminar: "))
            del mtsd[elegida]
            print("\n¡Tu comida fue eliminada correctamente!\n")
            for k in mtsd.values():
                print(k)
      elif opcione == "5":
            for k in cenasd.values():
                print(k)
            elegida = str(input("\nEscriba la comida a eliminar: "))
            del cenasd[elegida]
            print("\n¡Tu comida fue eliminada correctamente!\n")
            for k in cenasd.values():
                print(k)
      elif opcione=="6":
            global x
            x=1
            print("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nEsperamos le haya sido útil. ¡Hasta pronto!")
      else:
            print("Por favor, elija otra opción.\n")
            prevelim()

def menu1():
    print("Elija la opción a la que desea añadir")
    print("1. Desayuno ")
    print("2. Media mañana ")
    print("3. Almuerzo ")
    print("4. Media tarde ")
    print("5. Cena ")
    print("6. Terminar programa\n\n")
    opcion1 = input("Opción: ")
    if opcion1 == "1":
            value = input("\nEscriba la comida a añadir: ")
            desayunos.append(value)
            print("\n¡Tu comida fue añadida correctamente!\n")
    elif opcion1 == "2":
            value = input("\nEscriba la comida a añadir: ")
            mms.append(value)
            print("\n¡Tu comida fue añadida correctamente!\n")
    elif opcion1 == "3":
            value = input("\nEscriba la comida a añadir: ")
            almuerzos.append(value)
            print("\n¡Tu comida fue añadida correctamente!\n")
    elif opcion1 == "4":
            value = input("\nEscriba la comida a añadir: ")
            mts.append(value)
            print("\n¡Tu comida fue añadida correctamente!\n")
    elif opcion1 == "5":
            value = input("\nEscriba la comida a añadir: ")
            cenas.append(value)
            print("\n¡Tu comida fue añadida correctamente!\n")
    elif opcion1=="6":
            global x
            x=1
            print("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nEsperamos le haya sido útil. ¡Hasta pronto!")
    else:
            print("Por favor, elija otra opción.\n")
            menu1()

def menu():
    print("1. Desayuno aleatorio")
    print("2. Media mañana aleatoria")
    print("3. Almuerzo aleatorio")
    print("4. Media tarde aleatoria")
    print("5. Cena aleatoria")
    print("6. Menú completo de un día")
    print("7. Agregar opciones de comidas")
    print("8. Eliminar opciones de comidas")
    print("9. Terminar programa\n\n")
    opcion=input("Opción: ")
    if opcion=="1":
        desayunoaleatorio()
        limpiar()
        menu()
    elif opcion=="2":
        mediamananaaleatoria()
        limpiar()
        menu()
    elif opcion=="3":
        almuerzoaleatorio()
        limpiar()
        menu()
    elif opcion=="4":
        mediatardealeatoria()
        limpiar()
        menu()
    elif opcion=="5":
        cenaaleatoria()
        limpiar()
        menu()
    elif opcion=="6":
        diaaleatorio()
        limpiar()
        menu()
    elif opcion=="7":
        menu1()
        limpiar()
        menu()
    elif opcion=="8":
        prevelim()
        limpiar()
        menu()
    elif opcion=="9":
        global x
        x=1
        print("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nEsperamos le haya sido útil. ¡Hasta pronto!")
    else:
        print("Opción inválida. Por favor, ingrese una opción valida.\n\n\n\n\n\n\n\n\n")
        menu()
def limpiar():
    print("\n"*3)
x=0
while x==0:
    menu()
    break
